<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Quarry{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('assets/css/headerStyle.css') }}" />
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="#news">News</a></li>
        <li><a href="#contact">Contact</a></li>
        {% if app.user %}
            <li style="float:right"><a class="active" href={{ path('fos_user_profile_show') }}>{{ app.user.username }}</a></li>
        {% else %}
            <li style="float:right"><a class="active" href={{ path('fos_user_security_login') }}>Log in</a></li>
        {% endif %}

    </ul>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
