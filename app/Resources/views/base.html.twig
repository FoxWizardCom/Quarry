<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Quarry{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}" />
        {% block stylesheets %}{% endblock %}
        <script src="{{ asset('assets/jquery.js') }}"></script>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    {% trans_default_domain "UserBundle" %}
    <ul id="header-menu">
        <li><a href={{ path('story_default_index') }}>{{ 'menu.home'|trans }}</a></li>
        <li><a href={{ path('story_default_storylist') }}>{{ 'menu.list'|trans }}</a></li>
        <li><a href={{ path('story_default_createstory') }}>{{ 'menu.new'|trans }}</a></li>
        {% if app.user %}
            <li style="float:right"><a class="active" href={{ path('fos_user_profile_show') }}>{{ app.user.username }}</a></li>
        {% else %}
            <div  style="float:right">
            <li><a class="active" href={{ path('fos_user_registration_register') }}>{{ 'menu.register'|trans }}</a></li>
            <li><a class="active" href={{ path('fos_user_security_login') }}>{{ 'menu.login'|trans }}</a></li>
            </div>
        {% endif %}

    </ul>
    <div id="body-container">
        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
