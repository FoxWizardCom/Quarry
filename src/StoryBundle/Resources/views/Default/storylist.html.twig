{% endblock %}

{% block body %}
    {% for story in stories %}
        <a href="{{ path('story', {'storyId': story.id}) }}"><div class="story" style="background-color: {{ story.color }}"><p>{{story.title}}</p></div><a/>
    {% endfor %}
{% endblock %}

